<h4>注文履歴詳細</h4>

<h6>注文情報</h6>
<table>
  <tbody>
    <tr>
      <th>注文日</th>
      <th><%= @order.created_at.strftime('%Y/%m/%d') %></th>
    </tr>
    <tr>
      <th>配送先</th>
      <th><%= @order.address_display %></th>
    </tr>
    <tr>
      <th>支払方法</th>
      <th><%= @order.payment_i18n %></th>
    </tr>
  </tbody>
</table>


<h6>請求情報</h6>
<table>
  <tbody>
    <tr>
      <th>商品合計</th>
      <th><%= @order.total_amount %></th>
    </tr>
    <tr>
      <th>配送料</th>
      <th><%= @order.postage %></th>
    </tr>
    <tr>
      <th>ご請求額</th>
      <th><%= @order.total_amount + @order.postage %></th>
    </tr>
  </tbody>
</table>


<h6>注文内容</h6>
<table>
  <thead>
    <tr>
      <th>商品</th>
      <th>単価(税込)</th>
      <th>個数</th>
      <th>小計</th>
    </tr>
  </thead>
  <tbody>
    <% @order_detail.each do |order_detail| %>
    <tr>
      <td><%= order_detail.item.name %></td>
      <td><%= order_detail.tax_price %></td>
      <td><%= order_detail.quantity %></td>
      <td><%= order_detail.tax_price * order_detail.quantity %></td>
    </tr>
    <% end %>
  </tbody>
</table>