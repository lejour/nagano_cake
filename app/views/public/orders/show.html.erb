<div class="container">
  <div class="row">
    <div class="col-lg-1" style="padding:50px 0 0 0;">
    </div>
    <div class="col-lg-2" style="padding:50px 20px 0 20px;">
     <h5 class="bg-light text-center">注文履歴詳細</h5>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-1" style="padding:50px 0 0 0;">
      <h6 style="padding:0 0 0 15px;">注文情報</h6>
    </div>
    <div class="col-lg-6" style="padding:50px 0 0 0;">
    </div>
    <div class="col-lg-1" style="padding:50px 0 0 0;">
      <h6 style="padding:0 0 0 15px;">請求情報</h6>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-6">
      <table class="table table-bordered">
        <tbody>
          <tr>
            <th class="bg-light">注文日</th>
            <th><%= @order.created_at.strftime('%Y/%m/%d') %></th>
          </tr>
          <tr>
            <th class="bg-light">配送先</th>
            <th><%= @order.address_display %></th>
          </tr>
          <tr>
            <th class="bg-light">支払方法</th>
            <th><%= @order.payment_i18n %></th>
          </tr>
        </tbody>
      </table>
    </div>

    <div class="col-lg-1">
    </div>

    <div class="col-lg-3">
      <table class="table table-bordered">
        <tbody>
          <tr>
            <th class="bg-light">商品合計</th>
            <th><%= @order.total_amount %></th>
          </tr>
          <tr>
            <th class="bg-light">配送料</th>
            <th><%= @order.postage %></th>
          </tr>
          <tr>
            <th class="bg-light">ご請求額</th>
            <th><%= @order.total_amount + @order.postage %></th>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-1" style="padding:50px 0 0 0;">
      <h6 style="padding:0 0 0 15px;">注文内容</h6>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-8">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th class="bg-light">商品</th>
            <th class="bg-light">単価(税込)</th>
            <th class="bg-light">個数</th>
            <th class="bg-light">小計</th>
          </tr>
        </thead>
        <tbody>
          <% @order_detail.each do |order_detail| %>
          <tr>
            <td><%= order_detail.item.name %></td>
            <td><%= order_detail.tax_price %></td>
            <td><%= order_detail.quantity %></td>
            <td><%= order_detail.tax_price * order_detail.quantity %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>