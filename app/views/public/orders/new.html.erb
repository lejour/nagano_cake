<h4>注文情報入力</h4>

<h5>支払方法</h5>
<%= form_with model: @order, url: orders_confirm_path do |f| %>
  <%= f.radio_button :payment, Order.payments.key(0) %>
  <%= f.label :payment_credit_card, Order.payments_i18n[:credit_card] %>
  <%= f.radio_button :payment, Order.payments.key(1) %>
  <%= f.label :payment_transfer, Order.payments_i18n[:transfer] %>

<h5>お届け先</h5>
<table>
  <tr>
    <td>〒<%= current_customer.postal_code %></td>
    <td><%= current_customer.address %></td>
  </tr>
  <tr>
    <td><%= current_customer.full_name %></td>
  </tr>
</table>

<%= f.submit "確認画面へ進む" %>
<% end %>