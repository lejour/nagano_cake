<h4>注文情報入力</h4>

<h5>支払方法</h5>
<%= form_with model: @order, url: orders_confirm_path do |f| %>
  <%= f.radio_button :payment, "credit_card" %>
  <%= f.label :payment_credit_card, "クレジットカード" %>
  <%= f.radio_button :payment, "transfer" %>
  <%= f.label :payment_transfer, "銀行振込" %>

<h5>お届け先</h5>
<table>
  <tr>
    <td>〒<%= current_customer.postal_code %></td>
    <td><%= current_customer.address %></td>
  </tr>
  <tr>
    <td><%= current_customer.full_name %></td>
  </tr>
</table>

<%= f.submit "確認画面へ進む" %>
<% end %>