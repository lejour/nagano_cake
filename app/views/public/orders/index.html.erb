<div class="container">
  <div class="row">
    <div class="col-lg-1" style="padding:50px 0 0 0;">
    </div>
    <div class="col-lg-2" style="padding:50px 0 0 0;">
     <h5 class="bg-light text-center">注文履歴一覧</h5>
    </div>
  </div>

  <div class="row" style="margin:50px 0 0 0;">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th class="bg-light">注文日</th>
            <th class="bg-light">配送先</th>
            <th class="bg-light">注文商品</th>
            <th class="bg-light">支払金額</th>
            <th class="bg-light">注文詳細</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
          <tr>
            <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
            <td><%= order.address_display %></td>
            <td>
              <% order.order_details.each do |order_detail| %>
                <%= order_detail.item.name %><br>
              <% end %>
            </td>
            <td>
              <%= order.total_amount + order.postage %>円
            </td>
            <th><%= link_to "表示する", order_path(order.id),class: "btn btn-primary center-block", style: "padding:2px 10px 2px 10px;" %></th>
          </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @orders %>
  </div>
</div>