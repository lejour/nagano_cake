<h4>ショッピングカート</h4>
<%= button_to "カートを空にする", cart_items_path, method: :delete %>

<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @cart_items.each do |cart_item| %>
    <tr>
      <td></td>
      <td><%= (cart_item.item.price * 1.1).floor %></td>
      <td></td>
      <td><%= (cart_item.item.price * 1.1).floor * cart_item.amount %></td>
      <td><%= link_to "削除する", cart_items_path(cart_item), method: :delete %></td>
      <% @合計金額 +=  (cart_item.item.price * 1.1).floor * cart_item.amount %>
    </tr>
    <% end %>
  </tbody>
</table>