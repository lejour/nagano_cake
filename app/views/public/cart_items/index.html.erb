<h4>ショッピングカート</h4>
<%= button_to "カートを空にする", cart_items_path, method: :delete %>

<table>
  <thead>
    <tr>
      <th colspan="3">商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
      <th colspan="1"></th>
    </tr>
  </thead>
  <tbody>
    <% @cart_items.each do |cart_item| %>
    <% @total = @total + cart_item.subtotal %>
    <tr>
      <td colspan="3"><%= cart_item.item.name %></td>
      <td><%= (cart_item.item.price * 1.1).floor %></td>
      <td>
        <%= form_with model: cart_item, url:cart_items_path(cart_item.id) do |f| %>
          <%= f.select :amount, *[1..10] %>
          <%= f.submit "変更" %>
        <% end %>
      </td>
      <td><%= (cart_item.item.price * 1.1).floor * cart_item.amount %></td>
      <td><%= link_to "削除する", cart_items_path(cart_item.id), method: :delete %></td>
    </tr>
    <% end %>
    <tr>
      <td>合計金額</td>
      <td><%= @total %></td>
    </tr>
  </tbody>
</table>