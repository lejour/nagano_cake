<div class="container">
  <div class="row">
    <div class="col-lg-1" style="padding:50px 0 0 0;">
    </div>
    <div class="col-lg-2" style="padding:50px 0 0 0;">
     <h5 class="bg-light text-center">新規会員登録</h5>
    </div>
  </div>

    <%= form_with model: @customer, url: customer_registration_path do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>

  <div class="row">
    <div class="box" style="padding:50px 0 80px 70px;">
      <table>
        <tbody>
          <tr>
            <td>名前</td>
            <td>(姓)</td>
            <td><%= f.text_field :first_name %></td>
            <td>(名)</td>
            <td><%= f.text_field :last_name %></td>
          </tr>

          <tr>
            <td><div class="box" style="margin-top:10px">フリガナ</div></td>
            <td><div class="box" style="margin-top:10px">(セイ)</div></td>
            <td><div class="box" style="margin-top:10px"><%= f.text_field :first_name_kana %></div></td>
            <td><div class="box" style="margin-top:10px">(メイ)</div></td>
            <td><div class="box" style="margin-top:10px"><%= f.text_field :last_name_kana %></div></td>
          </tr>

          <tr>
            <td><div class="box" style="margin-top:10px">メールアドレス</div></td>
            <td><div class="box" style="margin-top:10px"></div></td>
            <td><div class="box" style="margin-top:10px"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></div></td>
          </tr>

          <tr>
            <td><div class="box" style="margin-top:10px">郵便番号(ハイフンなし)</div></td>
            <td><div class="box" style="margin-top:10px"></div></td>
            <td><div class="box" style="margin-top:10px"><%= f.text_field :postal_code %></div></td>
          </tr>

          <tr>
            <td><div class="box" style="margin-top:10px">住所</div></td>
            <td><div class="box" style="margin-top:10px"></div></td>
            <td colspan="3"><div class="box" style="margin-top:10px"><%= f.text_field :address, :size=>"55" %></div></td>
          </tr>

          <tr>
            <td><div class="box" style="margin-top:10px">電話番号(ハイフンなし)</div></td>
            <td><div class="box" style="margin-top:10px"></div></td>
            <td><div class="box" style="margin-top:10px"><%= f.text_field :telephone_number %></div></td>
          </tr>

          <tr>
            <td><div class="box" style="margin-top:10px">パスワード(6文字以上)</div></td>
            <td><div class="box" style="margin-top:10px"></div></td>
            <td><div class="box" style="margin-top:10px">
              <% if @minimum_password_length %>
              <% end %>
              <%= f.password_field :password, autocomplete: "new-password" %></div>
            </td>
          </tr>

          <tr>
            <td><div class="box" style="margin-top:10px">パスワード(確認用)</div></td>
            <td><div class="box" style="margin-top:10px"></div></td>
            <td><div class="box" style="margin-top:10px"><%= f.password_field :password_confirmation, autocomplete: "new-password" %></div></td>
          </tr>

          <tr>
            <td><div class="box" style="margin-top:10px"></div></td>
            <td><div class="box" style="margin-top:10px"></div></td>
            <td><div class="box" style="margin-top:10px"><%= f.submit "新規登録",class: "text-white bg-success", style: "padding:0 50px 0 50px;" %></div></td>
          </tr>

        </tbody>
      </table>
    </div>
  </div>

    <% end %>

  <div class="row">
    <div class="col-lg-1" style="padding:50px 0 0 0;">
    </div>
    <div class="col-lg-2" style="padding:50px 0 0 0;">
     <h5 class="bg-light text-center">既に登録済みの方</h5>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-1">
    </div>
    <div class="col-lg-4">
      <%= link_to "こちら", new_session_path(resource_name) %>からログインしてください。
    </div>
  </div>
</div>