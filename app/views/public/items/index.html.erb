<div class="container">
  <div class="row">

    <table>
      <tr><th><h2>商品一覧</h2></th><td><h4>(全<%= Item.all.count %>件)</h4></td></tr>
    </table>

  </div>

  <div class="row">
    <div class="d-flex flex-wrap">

      <table>
        <tbody>
          <tr>
            <% @items.each do |item| %>
            <td>
                <%= link_to item_path(item.id) do %>
                  <%= image_tag item.get_image, size: "200x150" %>
                <% end %>
            </td>
            <% end %>
          </tr>
          <tr>
            <% @items.each do |item| %>
            <td>
                <%= item.name %>
            </td>
            <% end %>
          </tr>
          <tr>
            <% @items.each do |item| %>
            <td>
                ¥<%= item.price %>
            </td>
            <% end %>
          </tr>
        </tbody>
      </table>

    </div>
  </div>

<%= paginate @items %>

</div>