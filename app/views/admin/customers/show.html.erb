<h4><%= @customer.full_name %>さんの会員詳細</h4>


<table class="table">
  <tbody>
    <tr>
      <td>会員ID</td>
      <td><%= @customer.id %></td>
    </tr>
    <tr>
      <td>氏名</td>
      <td><%= @customer.full_name %></td>
    </tr>
    <tr>
      <td>フリガナ</td>
      <td><%= @customer.full_name_kana %></td>
    </tr>
    <tr>
      <td>郵便番号</td>
      <td><%= @customer.postal_code %></td>
    </tr>
    <tr>
      <td>住所</td>
      <td colspan="2"><%= @customer.address %></td>
    </tr>
    <tr>
      <td>電話番号</td>
      <td><%= @customer.telephone_number %></td>
    </tr>
    <tr>
      <td>メールアドレス</td>
      <td><%= @customer.email %></td>
    </tr>
    <tr>
      <td></td>
      <td><%= link_to "編集する", edit_admin_customer_path(@customer) %></td>
      <td><%= link_to "注文履歴一覧を見る", admin_path %></td>
    </tr>
  </tbody>
</table>