<div class="container">
  <div class="row">
    <div class="col-lg-1" style="padding:50px 0 0 0;">
    </div>
    <div class="col-lg-2" style="padding:50px 0 0 0;">
      <h5 class="bg-light text-center">注文履歴一覧</h5>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-1" style="padding:10px 0 0 0;"></div>
    <div class="col-lg-10" style="padding:10px 0 0 0;">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th class="bg-light">購入日時</th>
            <th class="bg-light">購入者</th>
            <th class="bg-light">注文個数</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
          <% total = 0 %>
          <tr>
            <td>
              <%= link_to admin_orders_path(order.id) do %>
                <%= order.created_at.strftime('%Y/%m/%d %H:%M:%S') %>
              <% end %>
            </td>
            <td><%= order.name %></td>
            <td><% order.order_details.each do |order_detail| %>
                  <% total = total + order_detail.quantity %>
                <% end %>
                <%= total %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-5"></div>
    <div class="col-lg-2">
      <%= paginate @orders %>
    </div>
    <div class="col-lg-5"></div>
  </div>
</div>