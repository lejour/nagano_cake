<h4>注文履歴一覧</h4>

<table>
  <thead>
    <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
    <% total = 0 %>
    <tr>
      <td>
        <%= link_to admin_orders_path(order.id) do %>
          <%= order.created_at.strftime('%Y/%m/%d %H:%M:%S') %>
        <% end %>
      </td>
      <td><%= order.name %></td>
      <td><% order.order_details.each do |order_detail| %>
            <% total = total + order_detail.quantity %>
          <% end %>
          <%= total %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @orders %>