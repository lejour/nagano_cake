<h4>商品詳細</h4>

  <% if @item.image.attached? %>
    <%= image_tag @item.image, size: "200x200" %>
  <% else %>
    <%= image_tag 'no_image', size: "200x200" %>
  <% end %>

  <table class="table">
    <tbody>
      <tr>
        <th>商品名</th>
        <th><%= @item.name %></th>
      </tr>
      <tr>
        <th>商品説明</th>
        <th><%= @item.introduction %></th>
      </tr>
      <tr>
        <th>税込価格<br>(税抜価格)</th>
        <th><%= (@item.price * 1.1).floor %>(<%= @item.price %>)円</th>
      </tr>
    </tbody>
  </table>

  <div><%= link_to "編集する", edit_admin_item_path(@item) %></div>