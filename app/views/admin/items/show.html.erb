<div class="container">
  <div class="row">
    <div class="col-lg-1" style="padding:50px 0 0 0;">
    </div>
    <div class="col-lg-2" style="padding:50px 20px 0 20px;">
      <h5 class="bg-light text-center">商品詳細</h5>
    </div>
   </div>

   <div class="row">
     <div class="col-lg-8" style="margin-top:50px">


  <table>
    <tbody>
      <tr>
        <td rowspan="4">
          <% if @item.image.attached? %>
            <%= image_tag @item.image, size: "300x225" %>
          <% else %>
            <%= image_tag 'no_image', size: "300x225" %>
          <% end %>
        </td>
      </tr>
      <tr>
        <td><h5 class="box" style="margin-left:50px">商品名</h5></td>
        <td><h5 class="box" style="margin-left:50px"><%= @item.name %></h5></td>
      </tr>
      <tr>
        <td><h5 class="box" style="margin-left:50px">商品説明</h5></td>
        <td><h5 class="box" style="margin-left:50px"><%= @item.introduction %></h5></td>
      </tr>
      <tr>
        <td><h5 class="box" style="margin-left:50px">税込価格<br>(税抜価格)</h5></td>
        <td><h5 class="box" style="margin-left:50px"><%= (@item.price * 1.1).floor %>(<%= @item.price %>)円</h5></td>
      </tr>
    </tbody>
  </table>

    </div>
  </div>

  <div class="row" style="margin-top:100px">
    <div class="col-lg-5">
    </div>
    <div class="col-lg-2">
      <%= link_to "編集する", edit_admin_item_path(@item),class: "btn btn-success center-block" %>
    </div>
  </div>

</div>